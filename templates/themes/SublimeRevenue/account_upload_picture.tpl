olor:{$portlet_4_text};">                    <h4 data-toggle="collapse">                        <i class="fa fa-file-image fa fw"></i> {$custom_change_picture}                    </h4>                </div>            </div>            <div i class="panel-collapse collapse in">                                {$pic_info}                                <br />                                <br />                                <ul>                                    <li>                                        {$pic_bullet_1}                                    </li>{*                                     <li>                                        {$pic_bullet_2}                                    </li> *}                                    <li>                                        {$pic_bullet_3}                                    </li>                                </ul>                                <div class="space-12"></div>                                <form enctype="multipart/form-data" action="/dashboard/manage-account/upload-picture" METHOD="POST" class="form-horizontal">                                                                        <input name="csrf_token" value="{$csrf_token}" type="hidden"/>                                    <input type="hidden" name="update_picture" value="1">                                    <input type="hidden" name="page" value="43">                                                                        <div class="form-group">                                        <label class="col-sm-2 control-label" style="padding-top:2rem;">{$pic_file}</label>                                        <div class="col-sm-10">                                    <label for="file-upload" class="btn custom-file-upload">                                        <i class="fa fa-cloud-upload-alt fa fw" style="padding-top:2rem;"></i> {$custom_browse}                                    </label>               