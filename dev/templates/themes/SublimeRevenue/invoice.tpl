{*--------------------------------------------------------------------------------------------------------------iDevAffiliate HTML Front-End Template--------------------------------------------------------------------------------------------------------------Theme Name: Admin Panel--------------------------------------------------------------------------------------------------------------*}<!DOCTYPE HTML><html><head>    <meta http-equiv="Content-Type" content="text/html; charset={$char_set}">    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1">    <title>{$sitename} - {$custom_invoice_number}: SR{$invoice_number}</title>        <meta name="viewport" content="width=device-width, initial-scale=1.0">    <meta name="description" content="">    <meta name="author" content="">    <link rel="stylesheet" type="text/css" href="/templates/source/common/bootstrap/css/bootstrap.css">    <link rel="stylesheet" type="text/css" href="/templates/themes/{$active_theme}/_css/fonts.css">    <link rel="stylesheet" type="text/css" href="/templates/source/common/font-awesome/font-awesome.css">    <link rel="stylesheet" type="text/css" href="/templates/themes/{$active_theme}/_css/footable.min.css"><!-- no whites    <link rel="stylesheet" type="text/css" href="/templates/themes/{$active_theme}/css/style.css">--><!-- Chrome, Firefox OS and Opera --><meta name="theme-color" content="#532B72"><!-- Windows Phone --><meta name="msapplication-navbutton-color" content="#532B72"><!-- iOS Safari --><meta name="apple-mobile-web-app-status-bar-style" content="#532B72"></head><body style="margin-top:50px; background-color: #000;margin:2rem;"><div id="wrapper">    <div id="main-container">        <!-- BEGIN MAIN PAGE CONTENT -->        <div id="page-wrapper" class="collapsed">            <div class="row">                <div class="col-lg-12">                    <div class="row">                        <div class="col-md-10 col-md-offset-1">                            <div class="well white padding-25">                                <div align="center">                                    {if isset($main_logo)}                                        <img style="border:none; height:30px;padding:3px;" src="/{$main_logo}" alt="{$sitename} - {$header_title}">                                    {/if}                                </div>                                <div class="pull-right">                                    <a href="#" onClick="window.print();return false;">                                        <i class="fa fa-print fa-lg" style="color:#532B72;"></i>                                    </a>                                </div>                                                                <div class="clearfix"></div>                                                                <div class="hr hr-double hr-dotted hr-12"></div>                                                                <div class="row">                                    <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">                                        <p class="bigger-110">                                            <strong>{$custom_invoice_number}:</strong> SR{$invoice_number}                                            <br />                                            <strong>{$custom_custom_invoice_date}:</strong> {$invoice_date}                                                                                        <br />                                                                                        <strong>{$custom_invoice_ammount}:</strong> {if $cur_sym_location == 1}{$cur_sym}{/if}{$invoice_amount}{if $cur_sym_location == 2} {$cur_sym}{/if} {$currency}                                                                                        {if isset($revised_numbers)}                                                                                        <br />                                            <strong>{$debit_invoice_amount}:</strong> {if $cur_sym_location == 1}{$cur_sym}{/if}{$pexacttotaldebs}{if $cur_sym_location == 2} {$cur_sym}{/if} {$currency}                                                                                        <br />                                            <font color="#532B72"><strong>{$debit_revised_amount}:</strong> {if $cur_sym_location == 1}{$cur_sym}{/if}{$revised_amount}{if $cur_sym_location == 2} {$cur_sym}{/if} {$currency}</font>                                            {/if}                                            {if isset($vat_amount)}                                                                                        <br />                                            <strong>{$vat_amount_heading}:</strong> {if $cur_sym_location == 1}{$cur_sym}{/if}{$vat_amount}{if $cur_sym_location == 2} {$cur_sym}{/if} {$currency}                                            {/if}                                        </p>                                    </div>                                    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">                                        <div class="text-right">                                            <span class="label label-xlg arrowed-in-right arrowed-in label-danger" style="background-color:#532B72;">                                                {$invoice_header}                                            </span>                                        </div>                                    </div>                                </div>                                <div class="space-16"></div>                                                                <div class="row">                                    <div class="col-sm-8">                                        <h4 class="text-primary" style="color:#532B72;">                                            {$sitename} {$invoice_co_info}                                        </h4>                                                                                <div class="hr hr-4 hr-dotted"></div>                                                                                <div class="row">                                            <div class="col-lg-6">                                                <address>                                                    <strong>{$invoice_our_company}</strong>                                                    {$invoice_our_address1}                                                    {$invoice_our_address2}                                                    {$invoice_our_city} {$invoice_our_state}<br />                                                    {$invoice_our_zip}                                                    {$invoice_our_country}                                                </address>                                            </div>                                            <div class="col-lg-6">                                                <p>                                                    <strong>{$invoice_aff_user}:</strong> {$invoice_username}                                                    <br />                                                    <strong>{$invoice_aff_id}:</strong> {$invoice_affiliate_id}                                                    <br />                                                                                                        <strong>{$edit_personal_phone}:</strong> {$invoice_phone}                                                </p>                                                <div class="space-4"></div>                                                                                                <p>                                                    <strong>{$edit_standard_taxinfo}:</strong> {$invoice_taxinfo}                                                </p>                                            </div>                                        </div>                                    </div>                                    <div class="col-sm-4">                                        <h4 class="text-primary" style="color:#532B72;">                                            {$invoice_aff_info}                                        </h4>                                                                                <div class="hr hr-4 hr-dotted"></div>                                        <address>                                            {$invoice_affiliate_payto}                                            {if !empty($invoice_affiliate_cname)}                                            <strong>{$invoice_affiliate_cname}</strong><br />                                            {else}                                            <strong>{$invoice_affiliate_fname} {$invoice_affiliate_lname}</strong>                                            {/if}                                            {$invoice_affiliate_address1}                                            {$invoice_affiliate_address2}                                            {$invoice_affiliate_city} {$invoice_affiliate_state}<br />                                            {$invoice_affiliate_zip}                                            {$invoice_affiliate_country}                                        </address>                                    <!-- TODO: add payout details here from invoice.php, get from DB-->                                    </div>                                </div>                                {if isset($revised_numbers)}                                    <table class="table table-striped table-bordered">                                        <thead>                                            <tr>                                                <th width="20%">                                                    {$debit_date_label}                                                </th>                                                                                                <th width="60%">                                                    {$debit_reason_label}                                                </th>                                                                                                <th width="20%" style="text-align:right;">                                                    {$debit_amount_label}                                                </th>                                            </tr>                                        </thead>                                        <tbody>                                            {section name=nr loop=$debit_results}                                            <tr>                                                <td width="20%">                                                    {$debit_results[nr].debit_date_table}                                                </td>                                                                                                <td width="60%">                                                    {$debit_results[nr].debit_reason_table}                                                </td>                                                                                                <td width="20%" style="text-align:right;">                                                {if $cur_sym_location == 1}{$cur_sym}{/if}{$debit_results[nr].debit_amount_table}{if $cur_sym_location == 2} {$cur_sym}{/if} {$currency}                                                </td>                                            </tr>                                            {/section}                                    </table>                                {/if}                                                            <div style="overflow-x:auto;">                                <table class="table table-striped table-bordered" id="myTable">                                    <thead>                                        <tr>                                            <th width="25%">                                                {$comdetails_date}                                            </th>                                                                                        <th width="45%">                                                {$invoice_comm_type}                                            </th>                                            <th width="5%">                                                {$custom_country}                                            </th>                                                                                        <th width="25%" style="text-align:right;">                                                {$invoice_comm_amt}                                            </th>                                        </tr>                                    </thead>                                                                        <tbody>                                        {section name=nr loop=$payment_results}                                        <tr>                                            <td width="25%">                                                {$payment_results[nr].payment_individual_date}                                            </td>                                                                                        <td class="type" width="45%">                                                {$payment_results[nr].payment_individual_type}                                            </td>                                            <td width="5%">                                                {if isset($payment_results[nr].geo_location)}                                                <img border="0" src="/images/geo_flags/{$payment_results[nr].geo_location|lower}.png" class="geo_flag" style="padding-bottom:3px;"/> {$payment_results[nr].geo_location}                                                {else}                                                <img border="0" src="/images/geo_flags/n/a.png" class="geo_flag" style="padding-bottom:3px;"/> N/A                                                {/if}                                            </td>                                                                                        <td class="amount" width="25%" style="text-align:right;">                                            {if $cur_sym_location == 1}{$cur_sym}{/if}{$payment_results[nr].payment_individual_amount}{if $cur_sym_location == 2} {$cur_sym}{/if} {$currency}                                            </td>                                        </tr>                                        {/section}                                </table>                            </div>                                <div class="row">                                    <div class="col-lg-12 pull-right">                                        <p class="text-right bigger-150">                                            <strong>{$custom_invoice_comm_amt_total}:</strong><span class="text-danger" style="color:#532B72;"> <strong>{if $cur_sym_location == 1}{$cur_sym}{/if}{$revised_amount}{if $cur_sym_location == 2} {$cur_sym}{/if} {$currency}</strong></span>                                        </p>                                    </div>                                    <div class="clearfix"></div>                                </div>                                                                <hr class="separator" />                                                                <div class="well light text-center">                                    <!-- TODO: fix and translate in Russian, use custom language token -->                                    {$custom_custom_invoice_note}                                </div>                            </div>                        </div>                    </div>                </div>            </div>        </div>        <!-- /#page-wrapper -->        <!-- END MAIN PAGE CONTENT -->    </div></div>{literal}<script type="text/javascript" src="/templates/source/lightbox/js/jquery-1.11.1.min.js"></script><script src="/templates/source/common/bootstrap/js/bootstrap.js"></script><script src="/templates/themes/{/literal}{$active_theme}{literal}/js/jquery.slimscroll.min.js"></script><script src="/templates/themes/{/literal}{$active_theme}{literal}/js/footable.min.js"></script><script src="/templates/themes/{/literal}{$active_theme}{literal}/js/jquery.slimscroll.init.js"></script><script src="/templates/themes/{/literal}{$active_theme}{literal}/js/footable.init.js"></script>{/literal}<script type="text/javascript">$('td.amount:contains("-")').parents('tr').css('color','#532B72');</script></body></html>